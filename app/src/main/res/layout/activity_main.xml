<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_blue_dark"
    tools:context="com.cyril.udacity.appportfolio.MainActivity">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/title_size"
        android:id="@+id/textView" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#F08C35"
        android:text="@+string/popular_movies"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/popular_movies_button" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#F08C35"
        android:text="@+string/stock_hawk"
        android:layout_marginTop="26dp"
        android:id="@+id/stock_hawk_button"
        android:layout_below="@+id/popular_movies_button"
        android:layout_alignLeft="@+id/popular_movies_button"
        android:layout_alignStart="@+id/popular_movies_button" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#F08C35"
        android:text="@+string/build_it_bigger"
        android:layout_marginTop="26dp"
        android:id="@+id/build_it_bigger_button"
        android:layout_below="@+id/stock_hawk_button"
        android:layout_alignLeft="@+id/stock_hawk_button"
        android:layout_alignStart="@+id/stock_hawk_button" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#F08C35"
        android:text="@+string/make_your_app"
        android:layout_marginTop="26dp"
        android:id="@+id/make_your_app_button"
        android:layout_below="@+id/build_it_bigger_button"
        android:layout_alignLeft="@+id/build_it_bigger_button"
        android:layout_alignStart="@+id/build_it_bigger_button" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#F08C35"
        android:text="@+string/go_ubiquitous"
        android:layout_marginTop="26dp"
        android:id="@+id/go_ubiquitous_button"
        android:layout_below="@+id/make_your_app_button"
        android:layout_alignLeft="@+id/make_your_app_button"
        android:layout_alignStart="@+id/make_your_app_button" />

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#F08C35"
        android:text="@+string/capstone"
        android:layout_marginTop="26dp"
        android:id="@+id/capstone_button"
        android:layout_below="@+id/go_ubiquitous_button"
        android:layout_alignLeft="@+id/go_ubiquitous_button"
        android:layout_alignStart="@+id/go_ubiquitous_button" />
</RelativeLayout>
